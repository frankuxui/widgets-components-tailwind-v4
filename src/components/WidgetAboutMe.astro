<style>
  .dialog-show .dialog-content {
    animation: dialog-fade-in 300ms ease-out forwards;
  }

  .dialog-hide .dialog-content {
    animation: dialog-fade-out 200ms ease-in forwards;
  }

  @keyframes dialog-fade-in {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes dialog-fade-out {
    from {
      opacity: 1;
      transform: scale(1);
    }
    to {
      opacity: 0;
      transform: scale(0.95);
    }
  }
</style>

<script>
  declare global {
    interface Window {
      closeDialog: () => void;
    }
  }
  const trigger = document.getElementById("about-me-button") as HTMLElement;
  const overlay = document.getElementById("about-me-dialog-overlay") as HTMLElement;
  const dialog = document.getElementById("about-me-dialog") as HTMLElement;

  const openDialog = () => {
    overlay.classList.remove("hidden");
    overlay.classList.add("flex", "dialog-show");
    dialog.focus();
    document.body.classList.add("overflow-hidden");
  };

  const closeDialog = () => {
    overlay.classList.remove("dialog-show");
    overlay.classList.add("dialog-hide");

    const onAnimationEnd = () => {
      overlay.classList.remove("flex", "dialog-hide");
      overlay.classList.add("hidden");
      overlay.removeEventListener("animationend", onAnimationEnd);
      trigger.focus();
      document.body.classList.remove("overflow-hidden");
    };

    overlay.addEventListener("animationend", onAnimationEnd);
  };

  trigger.addEventListener("click", openDialog);
  trigger.addEventListener("keydown", (e) => {
    if (e.key === "Enter" || e.key === " ") {
      e.preventDefault();
      openDialog();
    }
  });

  document.addEventListener("click", (e) => {
    const el = e.target as HTMLElement;
    if (el.closest('[data-toggle="dialog-close"]')) {
      closeDialog();
    }
  });

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && !overlay.classList.contains("hidden")) {
      closeDialog();
    }
  });

  window.closeDialog = closeDialog;
</script>
